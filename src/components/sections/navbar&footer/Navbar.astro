---
//Import relevant dependencies
import ThemeIcon from "@components/ThemeIcon.astro";
import NavLink from "@components/ui/links/NavLink.astro";
import MegaMenuLink from "@components/ui/links/MegaMenuLink.astro";
import BrandLogo from "@components/BrandLogo.astro";
---

<header class="sticky inset-x-0 top-4 z-50 w-full text-sm md:flex-nowrap md:justify-start">
  <nav
    class="relative mx-2 w-full rounded-[36px] border border-[#7cb1df]/30 bg-neutral-300/60 px-4 py-3 backdrop-blur-md dark:border-[#7cb1df]/20 dark:bg-neutral-700/40 dark:backdrop-blur-md md:flex md:items-center md:justify-between md:px-6 lg:px-8 xl:mx-auto"
    aria-label="Navegação Principal"
  >
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a
        class="flex-none rounded-lg text-xl font-bold outline-hidden ring-zinc-500 focus-visible:ring-3 dark:ring-zinc-200 dark:focus:outline-hidden"
        href="/"
        aria-label="Sun City Baja"
      >
        <BrandLogo class="h-auto w-24" />
      </a>

      <!-- Botão para mobile -->
      <div class="ml-auto mr-5 md:hidden">
        <button
          type="button"
          class="hs-collapse-toggle flex h-8 w-8 items-center justify-center rounded-full text-sm font-bold text-neutral-600 transition duration-300 hover:bg-neutral-200 disabled:pointer-events-none disabled:opacity-50 dark:text-neutral-400 dark:hover:bg-neutral-700 dark:focus:outline-hidden"
          data-hs-collapse="#navbar-collapse-with-animation"
          aria-controls="navbar-collapse-with-animation"
          aria-label="Alternar menu"
        >
          <svg class="h-5 w-5 hs-collapse-open:hidden" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="3" x2="21" y1="6" y2="6" />
            <line x1="3" x2="21" y1="12" y2="12" />
            <line x1="3" x2="21" y1="18" y2="18" />
          </svg>
          <svg class="hidden h-5 w-5 hs-collapse-open:block" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 6 6 18" />
            <path d="m6 6 12 12" />
          </svg>
        </button>
      </div>

      <!-- Ícone tema no mobile -->
      <span class="inline-block md:hidden">
        <ThemeIcon />
      </span>
    </div>

    <!-- Menu de navegação -->
    <div
      id="navbar-collapse-with-animation"
      class="hs-collapse hidden grow basis-full overflow-hidden transition-all duration-300 md:block"
    >
      <div class="mt-5 flex flex-col gap-y-4 md:mt-0 md:flex-row md:items-center md:justify-end md:gap-x-6 lg:gap-x-8 md:gap-y-0 md:ps-7">
        <NavLink url="/" name="Início" />
        <NavLink url="/sobre" name="Quem Somos" />
        <NavLink url="/patrocine" name="Patrocine" />
        <NavLink url="/doe" name="Doe" />
        <NavLink url="/equipe" name="Equipe" />
        <NavLink url="/posts" name="Posts" />
        <NavLink url="/faq" name="FAQ" />
        <MegaMenuLink />
        <span class="hidden md:inline-block">
          <ThemeIcon />
        </span>
      </div>
    </div>
  </nav>
</header>
