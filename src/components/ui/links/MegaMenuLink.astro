---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';
import pangoConstruindo from "@images/pango/PangoMascoteFofo.png";
---

<div
  class="hs-dropdown py-3 [--adaptive:none] [--strategy:static] md:px-3 md:py-4 md:[--strategy:absolute] md:[--trigger:hover]"
>
  <button
    type="button"
    class="flex w-full items-center text-base font-medium text-neutral-600 hover:text-orange-600 dark:text-neutral-300 dark:hover:text-orange-400"
  >Setores da Equipe<Icon name="line-md:arrow-down" width={18} height={18} /></button>

  <div
    class="hs-dropdown-menu start-0 top-full z-10 hidden w-full min-w-60 rounded-2xl bg-neutral-300/60 py-2 opacity-0 transition-[opacity,margin] duration-[0.1ms] before:absolute before:-top-5 before:start-0 before:h-5 before:w-full hs-dropdown-open:opacity-100 dark:divide-neutral-700 dark:bg-neutral-800/80 backdrop-blur-md md:p-4 md:shadow-2xl md:duration-[150ms]"
  >
    <div class="gap-4 md:grid md:grid-cols-2 lg:grid-cols-3">
      <div class="mx-1 flex flex-col md:mx-0">
        <a
          href="/equipe#marketing"
          class="group flex gap-x-5 rounded-lg p-4 hover:bg-[#f07605]/10 dark:hover:bg-orange-500/10"
        >
          <Icon name="line-md:bell-alert-loop" class="mt-1 size-5 shrink-0 text-orange-500 dark:text-orange-400" />
          <div class="grow">
            <p class="font-medium text-neutral-800 dark:text-neutral-200">Marketing & Vendas</p>
            <p class="text-sm text-neutral-500 group-hover:text-neutral-800 dark:text-neutral-400 dark:group-hover:text-neutral-300">
              Divulgação, redes sociais e captação de recursos.
            </p>
          </div>
        </a>

        <a
          href="/equipe#ead"
          class="group flex gap-x-5 rounded-lg p-4 hover:bg-[#f07605]/10 dark:hover:bg-orange-500/10"
        >
            <Icon name="line-md:uploading-loop" class="mt-1 size-5 shrink-0 text-orange-500 dark:text-orange-400" />
          <div class="grow">
            <p class="font-medium text-neutral-800 dark:text-neutral-200">EAD</p>
            <p class="text-sm text-neutral-500 group-hover:text-neutral-800 dark:text-neutral-400 dark:group-hover:text-neutral-300">
              Design, aerodinâmica e acabamento do veículo.
            </p>
          </div>
        </a>

        <a
          href="/equipe#fasd"
          class="group flex gap-x-5 rounded-lg p-4 hover:bg-[#f07605]/10 dark:hover:bg-orange-500/10"
        >
          <Icon name="line-md:speedometer-loop" class="mt-1 size-5 shrink-0 text-orange-500 dark:text-orange-400" />
          <div class="grow">
            <p class="font-medium text-neutral-800 dark:text-neutral-200">FASD (Suspensão)</p>
            <p class="text-sm text-neutral-500 group-hover:text-neutral-800 dark:text-neutral-400 dark:group-hover:text-neutral-300">
              Sistemas de suspensão e dinâmica do veículo.
            </p>
          </div>
        </a>
      </div>

      <div class="mx-1 flex flex-col md:mx-0">
        <a
          href="/equipe#financeiro"
          class="group flex gap-x-5 rounded-lg p-4 hover:bg-[#f07605]/10 dark:hover:bg-orange-500/10"
        >
          <Icon name="line-md:coffee-half-empty-twotone-loop" class="mt-1 size-5 shrink-0 text-orange-500 dark:text-orange-400" />
          <div class="grow">
            <p class="font-medium text-neutral-800 dark:text-neutral-200">Financeiro</p>
            <p class="text-sm text-neutral-500 group-hover:text-neutral-800 dark:text-neutral-400 dark:group-hover:text-neutral-300">
              Gestão de orçamento e prestação de contas.
            </p>
          </div>
        </a>

        <a
          href="/equipe#pee"
          class="group flex gap-x-5 rounded-lg p-4 hover:bg-[#f07605]/10 dark:hover:bg-orange-500/10"
        >
          <Icon name="line-md:hazard-lights-filled-loop" class="mt-1 size-5 shrink-0 text-orange-500 dark:text-orange-400" />
          <div class="grow">
            <p class="font-medium text-neutral-800 dark:text-neutral-200">PEE (Powertrain)</p>
            <p class="text-sm text-neutral-500 group-hover:text-neutral-800 dark:text-neutral-400 dark:group-hover:text-neutral-300">
              Transmissão, motor e eficiência energética.
            </p>
          </div>
        </a>

        <a
          href="/equipe#patrocinio"
          class="group flex gap-x-5 rounded-lg p-4 hover:bg-[#f07605]/10 dark:hover:bg-orange-500/10"
        >
          <Icon name="line-md:phone-call-twotone-loop" class="mt-1 size-5 shrink-0 text-orange-500 dark:text-orange-400" />
          <div class="grow">
            <p class="font-medium text-neutral-800 dark:text-neutral-200">Patrocínio</p>
            <p class="text-sm text-neutral-500 group-hover:text-neutral-800 dark:text-neutral-400 dark:group-hover:text-neutral-300">
              Relacionamento com patrocinadores e benefícios.
            </p>
          </div>
        </a>
      </div>

      <div class="mx-1 flex flex-col pt-4 md:mx-0 md:pt-0">
        <span class="text-sm font-semibold uppercase text-neutral-800 dark:text-neutral-200">Em destaque</span>
        <a
          href="/about#historia"
          class="group mt-2 flex items-center gap-x-5 rounded-xl p-3 hover:bg-[#f07605]/10 dark:hover:bg-orange-500/10"
        >
          <Image
            src={pangoConstruindo}
            alt="Mascote Pango construindo carro"
            class="size-32 rounded-lg"
          />
          <div class="grow">
            <p class="text-sm text-neutral-800 dark:text-neutral-400">
              Conheça como tudo começou e por que competimos com tanto orgulho.
            </p>
            <p class="mt-3 inline-flex items-center gap-x-1 text-sm font-medium text-orange-500 decoration-2 hover:underline dark:text-orange-400">
              Leia mais
              <Icon name="line-md:arrow-right" />
            </p>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
